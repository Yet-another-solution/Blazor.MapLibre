@page "/examples/add-listener"

@using System.Text.Json
@using Community.Blazor.MapLibre.Models.Event
@using Community.Blazor.MapLibre.Models.Feature
@using Community.Blazor.MapLibre.Models.Layers
@using Community.Blazor.MapLibre.Models.Sources

<ViewOnGitHub FilePath="examples/Community.Blazor.MapLibre.Examples/Examples/AddListener.razor"/>

<MapLibre @ref="_map"
          Options="_mapOptions"
          OnLoad="@OnMapLoad"
          Class="rounded-top"
          Height="600px">
</MapLibre>

<textarea @bind="_eventDataText" rows="10" style="width: 100%; height: 300px; margin-top: 10px;" readonly></textarea>

@code {
    private MapLibre _map = new();
    private string _eventDataText = "";

    private readonly MapOptions _mapOptions = new()
    {
        Style = "https://demotiles.maplibre.org/style.json",
    };

    private async Task OnMapLoad(EventArgs args)
    {
        await _map.AddSource("maine", new GeoJsonSource()
        {
            Data = new FeatureFeature()
            {
                Id = "1234",
                Geometry = new PolygonGeometry()
                {
                    Coordinates =
                    [
                        [
                            [-67.13734351262877, 45.137451890638886],
                            [-66.96466, 44.8097],
                            [-68.03252, 44.3252],
                            [-69.06, 43.98],
                            [-70.11617, 43.68405],
                            [-70.64573401557249, 43.090083319667144],
                            [-70.75102474636725, 43.08003225358635],
                            [-70.79761105007827, 43.21973948828747],
                            [-70.98176001655037, 43.36789581966826],
                            [-70.94416541205806, 43.46633942318431],
                            [-71.08482, 45.3052400000002],
                            [-70.6600225491012, 45.46022288673396],
                            [-70.30495378282376, 45.914794623389355],
                            [-70.00014034695016, 46.69317088478567],
                            [-69.23708614772835, 47.44777598732787],
                            [-68.90478084987546, 47.184794623394396],
                            [-68.23430497910454, 47.35462921812177],
                            [-67.79035274928509, 47.066248887716995],
                            [-67.79141211614706, 45.702585354182816],
                            [-67.13734351262877, 45.137451890638886],
                        ]
                    ]
                }
            }
        });

        var fillLayer = new FillLayer()
        {
            Id = "GeoJsonLayerId",
            Source = "maine",
            Paint = new FillLayerPaint()
            {
                FillColor = "#4e8752",
                FillOpacity = 0.8,
            },
        };
        await _map.AddLayer(fillLayer);
        await _map.OnClick("GeoJsonLayerId", OnClick);
    }

    private void OnClick(MapMouseEvent eventData)
    {
        _eventDataText = JsonSerializer.Serialize(eventData.Features);
        StateHasChanged();
    }
}