@page "/examples/render-globe"

<MapLibre @ref="_mapListener"
          Options="_mapOptions"
          OnStyleLoad="OnStyleLoad"
          Class="rounded-top"
          Height="600px">
</MapLibre>

@code {
    private MapLibre _mapListener { get; set; } = new MapLibre();

    private readonly MapOptions _mapOptions = new()
    {
        Style = "https://demotiles.maplibre.org/style.json"
    };


    private async Task OnStyleLoad(EventArgs args)
    {
        await _mapListener.SetProjection(new ProjectionSpecification()
        {
            Type = "globe"
        });
    }

}